#header
  height: 53px
  position: fixed
  top: 0
  left: 0
  z-index: 99
  width: 100%
  background: header-background
  border-bottom: 1px solid color-border
  box-shadow: 0 3px 2px -2px rgba(200,200,200,0.2)

#header-outer
  height: 100%
  position: relative

#header-inner
  position: relative
  overflow: hidden

$logo-text
  text-decoration: none
  color: #fff
  font-weight: 300
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3)

#main-nav
  float: left

$nav-link
  float: left
  color: #666
  text-decoration: none
  text-shadow: 0 1px rgba(0, 0, 0, 0.2)
  transition: opacity 0.2s
  display: block
  line-height: header-height
  border-bottom: 2px solid transparent;
  padding: 0 14px

.nav-icon
  @extend $nav-link
  text-align: center
  font-size: font-size
  width: font-size
  height: header-height
  line-height: header-height
  padding: 0 14px
  position: relative
  cursor: pointer

.main-nav-link
  @extend $nav-link
  font-weight: 300
  letter-spacing: 1px
  &.active
    border-bottom: 2px solid #b92b27
  &:active
    border-bottom: 2px solid #b92b27
  &:hover
    opacity: 1
    border-bottom: 2px solid #b92b27
    background: #f5f5f5
  @media mq-mobile
    display: none

#main-nav-toggle
  display: none
  @media mq-mobile
    display: block

#sub-nav
  float: right

#search-form-wrap
  position: absolute
  top: 15px
  width: 150px
  height: 30px
  right: -150px
  opacity: 0
  transition: 0.2s ease-out
  &.on
    opacity: 1
    right: 0
  @media mq-mobile
    width: 100%
    right: -100%

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 5px 15px
  border-radius: 15px
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)

.search-form-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font-size: 13px
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777
