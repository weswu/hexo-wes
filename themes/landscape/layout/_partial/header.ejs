<header id="header">
  <div id="header-outer" class="outer">
    <div id="header-inner" class="inner">
      <nav id="main-nav">
        <a id="main-nav-toggle" class="nav-icon iconfont icon-menu"></a>
        <a class="main-nav-link <% if (currentPage === 'index'){ %>active<% } %>" href="/">主页</a>
        <a class="main-nav-link <% if (currentPage === 'archives' || currentPage === 'blog'){ %>active<% } %>" href="/archives">归档</a>
        <a class="main-nav-link <% if (currentPage === 'book'){ %>active<% } %>" href="/book">book</a>
      </nav>
      <nav id="sub-nav">
        <% if (theme.rss){ %>
          <a id="nav-rss-link" class="nav-icon iconfont icon-subscription" href="<%- theme.rss %>" title="<%= __('rss_feed') %>" target="_blank"></a>
        <% } %>
        <a id="nav-search-btn" class="nav-icon iconfont icon-search" title="<%= __('search') %>"></a>
      </nav>
      <div id="search-form-wrap">
        <form action="//www.baidu.com/baidu" method="get" accept-charset="UTF-8" class="search-form">
          <input type="search" name="q" results="0" class="search-form-input" placeholder="Search">
          <button type="submit" class="search-form-submit iconfont icon-search"></button>
          <input type="hidden" name="sitesearch" value="<%- config.url.replace(/^https?:\/\//, '') %>">
        </form>
      </div>
    </div>
  </div>
</header>
